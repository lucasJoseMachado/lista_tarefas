%h1 Tasks

%p.form-group
  = render partial: 'new'
.row
  .col-xs-6
    .panel.panel-default
      .panel-heading
        %strong
          = "Undone tasks"
      .panel-body
        = render partial: "list", locals: {tasks: @undone_tasks}
  .col-xs-6
    .panel.panel-default
      .panel-heading
        %strong
          = "Done tasks"
      .panel-body
        = render partial: "list", locals: {tasks: @done_tasks}
